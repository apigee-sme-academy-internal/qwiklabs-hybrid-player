BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

function get_root_env() {
  var_name="$1"
  sudo bash -c 'source /root/env ; echo $'${var_name}
}

export -f get_root_env

export PATH="/snap/bin:$PATH"
export PROJECT=$(get_root_env PROJECT)
export CLUSTER='hybrid-cluster'
export CLUSTER_ZONE=$(get_root_env ZONE)
export ORG=$(get_root_env PROJECT)
export ENV='test'
export PROJECT_SERVICE_ACCOUNT_JSON=$(get_root_env PROJECT_SERVICE_ACCOUNT_JSON)
export RUNTIME_HOST_ALIAS=$(get_root_env RUNTIME_HOST_ALIAS)

export RUNTIME_HOST_ALIAS
export KUBECONFIG="${BASEDIR}/config"

if [ ! -f "${KUBECONFIG}" ]; then gcloud container clusters get-credentials $CLUSTER --zone $CLUSTER_ZONE &>/dev/null ; fi